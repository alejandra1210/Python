#ejercicio 6
#funcion Fibonacci 1 +1 = 1 +2 = 3
                            #2 + 3 =5
                               #3 + 5 = 8


cantidad = int(input("Ingrese la cantidad que numeros que dese calcular l"))

def fib(cantidad):
    if cantidad < 2:
        return cantidad
    else:
        # fn = fn-1 + fn-2
        return fib(cantidad - 1) + fib(cantidad - 2)




for x in range(10):
    print(fib(x))

