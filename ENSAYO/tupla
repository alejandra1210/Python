#String
curso = "Curso de python 3"

#resultado =len(curso)

resultado = curso[0] #indices 1 al 17 obtendremos la primera letra curso[1:16:2] tambien con saltos

print(resultado)
#string no se pueden modificar
#pero si generar nuevos string con string ya exsistentes

lenguajes ="Python; java; ruby; php; c++"

separardor = ";"
resultado =lenguajes.split(separardor) #ejenera una lista , y los divide por cada punto y como que enceuntre

nuevo_string = " ".join(resultado) #separdos por un espacio o cualquier cosa  join covierte una lista en string

#converti un comentario de varia lines en lista

