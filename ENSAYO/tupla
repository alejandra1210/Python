curso="python"
version = "3"

resultado = "Curso de %s %s" %(curso,version) #los % son replazados por las variables con respecto a la pocisi√≥n
resultado = "Curso de {a} {b}".format(a=curso,b=version)#podemos nombras las variables, con respecto nombre

print(resultado)



curso = "P" + curso[1:] #poner la p en mayuscula este es un string nuevo no modificacmos
#concatenar un nuevo entero, no sepuede concatenar un tipo de dato diferente a un string

curso = curso + " "+str(3) #convirte un numero en un string
print(curso)

